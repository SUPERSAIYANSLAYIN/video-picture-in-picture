{
  "manifest_version": 2,
  "name": "YouTube Picture in Picture",
  "description": "Float videos from YouTube with native picture-in-picture",
  "version": "1.0.6",
  "icons": {
    "16": "picture-in-picture.png",
    "48": "picture-in-picture.png",
    "128": "picture-in-picture.png"
  },
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [{
    "js": [ "picture-in-picture.js" ],
    "matches": [ "*://*.youtube.com/*" ]
  }],
  "browser_action": {
    "default_title": "YouTube Picture in Picture",
    "default_popup": "picture-in-picture.html"
  }
}
